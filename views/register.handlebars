        <label for="InputMobile">Mobile Number</label>
        <input type="mobilenumber" class="form-control" id="InputMobile" placeholder="mobile number">
    </div>
    <div class="form-group">
        <label for="InputPassword">Password</label>
        <input type="password" class="form-control" id="InputPassword" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="InputPassword1">Re-enter password</label>
        <input type="password" class="form-control" id="InputPassword1" placeholder="Re-enter Password">
    </div>
   <br>

    <button type="submit" class="btn btn-primary btn-block">sign up</button><br>
    <h5 align="center"> return back to <a href="homePage.html"style="color: crimson">sign in</a></h5>
